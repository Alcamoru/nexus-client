<?xml version="1.0" encoding="utf-8"?>

<Page


    x:Class="NexusClient.SummonerInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White"
    NavigationCacheMode="Enabled">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#34495E" x:Name="MenuStackGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Click="ButtonBase_OnClick">
                <TextBlock
                    Text="Retour"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="White" />
            </Button>
            <HyperlinkButton Grid.Column="1" x:Name="ChampionsHyperlinkButton">
                <TextBlock
                    Text="Champions"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="White" />
            </HyperlinkButton>
            <HyperlinkButton Grid.Column="2" x:Name="ProfileHyperlinkButton">
                <TextBlock
                    Text="Profil"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="White" />
            </HyperlinkButton>
            <HyperlinkButton Grid.Column="3" x:Name="ScoreboardHyperlinkButton">
                <TextBlock
                    Text="Scoreboard"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="White" />
            </HyperlinkButton>

            
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" ></ColumnDefinition>
                <ColumnDefinition Width="3*" ></ColumnDefinition>
                <ColumnDefinition Width="3*" ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel
                Margin="20"
                CornerRadius="8"
                Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Orientation="Vertical"
                        Background="#34495E">
                <TextBlock
                    Margin="10"
                    Text="Meilleurs champions" Foreground="White" FontSize="18" TextAlignment="Center"
                           FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter"></TextBlock>
                <Line Stroke="Black" StrokeThickness="2"></Line>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="Assets/media/20231016_072647989_iOS.jpg" Width="60"></Image>
                    <TextBlock
                        VerticalAlignment="Center"
                        Grid.Column="1" Text="Karthus" Foreground="White" FontSize="18" TextAlignment="Center"
                               FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" ></TextBlock>
                    <TextBlock
                        VerticalAlignment="Center"
                        Grid.Column="2" Text="53%" Foreground="White" FontSize="18" TextAlignment="Center"
                               FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" ></TextBlock>
                </Grid>

                <Grid Grid.Row="1" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="Assets/media/20231016_072647989_iOS.jpg" Width="60"></Image>
                    <TextBlock
                        VerticalAlignment="Center"
                        Grid.Column="1" Text="Karthus" Foreground="White" FontSize="18" TextAlignment="Center"
                        FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" ></TextBlock>
                    <TextBlock
                        VerticalAlignment="Center"
                        Grid.Column="2" Text="53%" Foreground="White" FontSize="18" TextAlignment="Center"
                        FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" ></TextBlock>
                </Grid>

                <Grid Grid.Row="2" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="Assets/media/20231016_072647989_iOS.jpg" Width="60"></Image>
                    <TextBlock
                        VerticalAlignment="Center"
                        Grid.Column="1" Text="Karthus" Foreground="White" FontSize="18" TextAlignment="Center"
                        FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" ></TextBlock>
                    <TextBlock
                        VerticalAlignment="Center"
                        Grid.Column="2" Text="53%" Foreground="White" FontSize="18" TextAlignment="Center"
                        FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" ></TextBlock>
                </Grid>
                    <Grid Grid.Row="3" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="Assets/media/20231016_072647989_iOS.jpg" Width="60"></Image>
                        <TextBlock
                            VerticalAlignment="Center"
                            Grid.Column="1" Text="Karthus" Foreground="White" FontSize="18" TextAlignment="Center"
                            FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" ></TextBlock>
                        <TextBlock
                            VerticalAlignment="Center"
                            Grid.Column="2" Text="53%" Foreground="White" FontSize="18" TextAlignment="Center"
                            FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" ></TextBlock>
                    </Grid>

                </Grid>



            </StackPanel>
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
            </Grid>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            </StackPanel>
        </Grid>
        
    </Grid>
</Page>
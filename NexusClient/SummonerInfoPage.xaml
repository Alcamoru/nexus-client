<?xml version="1.0" encoding="utf-8"?>

<Page


    x:Class="NexusClient.SummonerInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White"
    NavigationCacheMode="Enabled">

    <Grid x:Name="SummonerInfoPageGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#34495E" x:Name="MenuStackGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Click="ButtonBase_OnClick">
                <TextBlock
                    Text="Retour"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="White" />
            </Button>
            <HyperlinkButton Grid.Column="1" x:Name="ChampionsHyperlinkButton">
                <TextBlock
                    Text="Champions"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="White" />
            </HyperlinkButton>
            <HyperlinkButton Grid.Column="2" x:Name="ProfileHyperlinkButton">
                <TextBlock
                    Text="Profil"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="White" />
            </HyperlinkButton>
            <HyperlinkButton Grid.Column="3" x:Name="ScoreboardHyperlinkButton">
                <TextBlock
                    Text="Scoreboard"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="White" />
            </HyperlinkButton>

            
            

        </Grid>
        <Grid x:Name="SummonerInfoPageContentGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                x:Name="BestChampionsStackPanel"
                Margin="20"
                CornerRadius="8"
                Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Orientation="Vertical"
                Background="#34495E">
                <TextBlock
                    Margin="10"
                    Text="Meilleurs champions" Foreground="White" FontSize="18" TextAlignment="Center"
                    FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />
                <Line Stroke="Black" StrokeThickness="2" />

                <Grid x:Name="BestChampionsContentGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="Assets/media/20231016_072647989_iOS.jpg" Width="60" />
                        <TextBlock
                            VerticalAlignment="Center"
                            Grid.Column="1" Text="Karthus" Foreground="White" FontSize="18" TextAlignment="Center"
                            FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />
                        <TextBlock
                            VerticalAlignment="Center"
                            Grid.Column="2" Text="53%" Foreground="White" FontSize="18" TextAlignment="Center"
                            FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />
                    </Grid>

                    <Grid Grid.Row="1" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="Assets/media/20231016_072647989_iOS.jpg" Width="60" />
                        <TextBlock
                            VerticalAlignment="Center"
                            Grid.Column="1" Text="Karthus" Foreground="White" FontSize="18" TextAlignment="Center"
                            FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />
                        <TextBlock
                            VerticalAlignment="Center"
                            Grid.Column="2" Text="53%" Foreground="White" FontSize="18" TextAlignment="Center"
                            FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />
                    </Grid>

                    <Grid Grid.Row="2" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="Assets/media/20231016_072647989_iOS.jpg" Width="60" />
                        <TextBlock
                            VerticalAlignment="Center"
                            Grid.Column="1" Text="Karthus" Foreground="White" FontSize="18" TextAlignment="Center"
                            FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />
                        <TextBlock
                            VerticalAlignment="Center"
                            Grid.Column="2" Text="53%" Foreground="White" FontSize="18" TextAlignment="Center"
                            FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />
                    </Grid>
                    <Grid Grid.Row="3" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="Assets/media/20231016_072647989_iOS.jpg" Width="60" />
                        <TextBlock
                            VerticalAlignment="Center"
                            Grid.Column="1" Text="Karthus" Foreground="White" FontSize="18" TextAlignment="Center"
                            FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />
                        <TextBlock
                            VerticalAlignment="Center"
                            Grid.Column="2" Text="53%" Foreground="White" FontSize="18" TextAlignment="Center"
                            FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />
                    </Grid>

                </Grid>


            </StackPanel>
            <Grid x:Name="MatchListGrid" Padding="10" Margin="20" CornerRadius="15" Background="#EEEEEE" Grid.Row="1"
                  Grid.Column="1"
                  Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

            </Grid>
            
            <Grid Background="#EEEEEE" Margin="20" CornerRadius="15" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="4*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Leaderboard" Foreground="#2980B9" FontSize="26" TextAlignment="Center"
                           FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />


                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid
                         Padding="10" Margin="20 20 0 20" CornerRadius="12" Background="#27AE60" Grid.Row="0" Grid.Column="0"
                          Grid.RowSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="3*" />
                        </Grid.RowDefinitions>
                        <Border Padding="8" CornerRadius="8" Width="50" Height="50" Background="#F39C12" Grid.Row="0" Grid.Column="0">
                            <TextBlock
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Text="1er" Foreground="White" FontSize="14" TextAlignment="Center"
                                FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />
                        </Border>

                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical">
                            <Image Width="40" Source="Assets/media/20231016_072854375_iOS.jpg" />
                            <TextBlock
                                Text="Doss not worlds" Foreground="White" FontSize="14" TextAlignment="Center"
                                FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Vertical">
                            <Image Width="40" Source="Assets/media/20231016_073010040_iOS.jpg" />
                            <TextBlock
                                Text="2024 LP" Foreground="White" FontSize="14" TextAlignment="Center"
                                FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />
                        </StackPanel>

                        <Rectangle Fill="#9B59B6" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Height="5"
                                   Width="100" />

                    </Grid>

                    <Grid Margin="20 20 20 10" CornerRadius="12" Background="#F1C40F" Grid.Row="0" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Padding="8" CornerRadius="8" Width="50" Height="50" Background="#2980B9" Grid.Column="0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="2nd" Foreground="White" FontSize="14" TextAlignment="Center"
                                FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />
                        </Border>

                        <Image Grid.Column="1" Width="40" Source="Assets/media/20231016_072858062_iOS.jpg" />

                        <TextBlock Grid.Column="2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="hovinko z kose" Foreground="White" FontSize="14" TextAlignment="Center"
                                   FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />

                        <TextBlock Grid.Column="3"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="1835 LP" Foreground="White" FontSize="14" TextAlignment="Center"
                                   FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />

                        <Image Grid.Column="4" Width="40" Source="Assets/media/20231016_073010040_iOS.jpg" />

                    </Grid>

                    <Grid Margin="20 10 20 20" CornerRadius="12" Background="#F1C40F" Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Padding="8" CornerRadius="8" Width="50" Height="50" Background="#2980B9" Grid.Column="0">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="2nd" Foreground="White" FontSize="14"
                                FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />
                        </Border>

                        <Image Grid.Column="1" Width="40" Source="Assets/media/20231016_072858062_iOS.jpg" />

                        <TextBlock Grid.Column="2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="hovinko z kose" Foreground="White" FontSize="14" TextAlignment="Center"
                                   FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />

                        <TextBlock Grid.Column="3"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="1835 LP" Foreground="White" FontSize="14" TextAlignment="Center"
                                   FontFamily="Assets/fonts/Inter/Inter-Medium.ttf#Inter" />

                        <Image Grid.Column="4" Width="40" Source="Assets/media/20231016_073010040_iOS.jpg" />

                    </Grid>

                </Grid>

            </Grid>

        </Grid>

    </Grid>
</Page>
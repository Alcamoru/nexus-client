<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="NexusClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White"
    MinHeight="500"
    MinWidth="800"
    NavigationCacheMode="Enabled">

    <NavigationView
        PaneDisplayMode="LeftCompact"
        IsBackEnabled="True"
        BackRequested="NavigationView_OnBackRequested"
        SelectionChanged="NavigationView_OnSelectionChanged"
        >
        <NavigationView.Resources>
            <Thickness x:Key="NavigationViewHeaderMargin">35,20,0,0</Thickness>
        </NavigationView.Resources>
        <NavigationView.MenuItems>
            <TextBox Margin="35 0 0 0" PlaceholderText="Rechercher un invocateur"></TextBox>
            <NavigationViewItem Content="Menu Item1" Tag="Accueil" Icon="Play"/>
            <NavigationViewItem Content="Menu Item2" Tag="Profil" Icon="Save"/>
            <NavigationViewItem Content="Menu Item3" Tag="Tier List" Icon="Refresh"/>
            <NavigationViewItem Content="Menu Item4" Tag="Builds" Icon="Download"/>
        </NavigationView.MenuItems>
        <Frame x:Name="ContentFrame"></Frame>
    </NavigationView>
</Page>